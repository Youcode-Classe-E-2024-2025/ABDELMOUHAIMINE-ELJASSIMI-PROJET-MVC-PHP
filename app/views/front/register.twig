<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArticleHub - Login/Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-purple-100 to-indigo-200 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-2xl w-96 relative overflow-hidden">
        <h1 class="text-3xl font-bold text-center mb-6 text-indigo-800">ArticleHub</h1>
        
        <div class="flex justify-center mb-6">
            <button id="signinToggle" class="px-4 py-2 bg-indigo-600 text-white rounded-l-full focus:outline-none">Sign In</button>
            <button id="signupToggle" class="px-4 py-2 bg-purple-600 text-white rounded-r-full focus:outline-none">Sign Up</button>
        </div>

        <form id="signinForm" class="space-y-4" action="/login" method="POST">
            <input type="hidden" name="csrf_token" value={{ Csrftoken }}>
            <div>
                <label for="signinEmail" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" name="email" id="signinEmail" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
            </div>
            <div>
                <label for="signinPassword" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="signinPassword" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
            </div>
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign In</button>
        </form>

        <form id="signupForm" class="space-y-4 hidden" action="/register" method="POST">
            <input type="hidden" name="csrf_token" value={{ Csrftoken }}>
            <div>
                <label for="signupName" class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" name="name" id="signupName" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500" required>
            </div>
            <div>
                <label for="signupEmail" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" name="email" id="signupEmail" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500" required>
            </div>
            <div>
                <label for="signupPassword" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="signupPassword" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500" required>
            </div>
            <div>
                <select name="role" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500" id="role">
                    <option value="2">Author</option>
                    <option value="3">User</option>
                </select>

            </div>
            <button type="submit" name="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">Sign Up</button>
        </form>
    </div>

    <script>
        const signinToggle = document.getElementById('signinToggle');
        const signupToggle = document.getElementById('signupToggle');
        const signinForm = document.getElementById('signinForm');
        const signupForm = document.getElementById('signupForm');

        signinToggle.addEventListener('click', () => {
            signinForm.classList.remove('hidden');
            signupForm.classList.add('hidden');
            signinToggle.classList.add('bg-indigo-600');
            signinToggle.classList.remove('bg-indigo-400');
            signupToggle.classList.add('bg-purple-600');
            signupToggle.classList.remove('bg-purple-400');
        });

        signupToggle.addEventListener('click', () => {
            signinForm.classList.add('hidden');
            signupForm.classList.remove('hidden');
            signupToggle.classList.add('bg-purple-600');
            signupToggle.classList.remove('bg-purple-400');
            signinToggle.classList.add('bg-indigo-400');
            signinToggle.classList.remove('bg-indigo-600');
        });
    </script>
</body>
</html>